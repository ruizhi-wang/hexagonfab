<!--  Top intro page -->
<div class="landing-top">
  <div class="va-container">
    <div class="va-middle text-center">
      	<div class="container">
      		<%=image_tag("HexagonFab_white.svg", id:'main_logo', class: 'img-responsive center-block')%>
      	</div>
	   </div>
	</div>
</div>

<!-- Spacer -->
<div style="height:1em"></div>

<div class="container">
  <!--  Text Section -->
  <div class="landing-text text-justify">
    <br>
    <h2 class="text-center">Our Mission</h2>
    <%=image_tag("triangle_logo.svg", id:'triangle_image', class: 'img-responsive center-block')%>
      <h3><small>
      <%=t('home.landing-mission')%>
      </small></h3>
    <br>
  </div>

  <!-- Text Section -->
  <div class="landing-text text-why">
      <br>
      <h2 class="text-center">What Drives Us</h2>
      <%=image_tag("square_logo.svg", id:'square_image', class: 'img-responsive center-block')%>
        <h3><small>
        <%=t('home.landing-why')%>
      </small></h3>
      <br>
  </div>


  <!--  Text Section -->
  <div class="landing-text text-justify">
      <br>
      <h2 class="text-center">What We Do</h2>
      <%=image_tag("hexagon_logo.svg", id:'hexagon_image', class: 'img-responsive center-block')%>
        <h3><small>
        <%=t('home.landing-doing')%>
      </small></h3>
      <br>
      <div class="center">
        <%= link_to t('product.product'), product_path, class: "btn btn-primary" %>
      </div>
      <br>
  </div>

  <!--  Text Section -->
  <div class="landing-text text-justify">
      <br>
      <h2 class="text-center">Contact Us</h2>
      <%=image_tag("logo_alone.svg", id:'logo_image', class: 'img-responsive center-block')%>
        <h3><small>
        <%=t('home.landing-contact')%>
      </small></h3>
      <br>
      <div class="center">
        <%= link_to t('home.contact'), new_contact_path, class: "btn btn-primary" %>
      </div>
      <br>
  </div>

</div>


