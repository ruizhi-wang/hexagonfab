<% provide(:title, "Home") %>

<style media="screen">

/* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
@media (max-width: 800px) {
  .landing-text{
    width: 95%;
  }

  .landing-top{
    width: 100%;
  }

  .container-content{
    width: 100%;
  }
}

@media screen and (min-width: 50px) {
  #triangle_image{width: 150px}
  #square_image{width: 150px}
  #hexagon_image{width: 150px}
  #logo_image{width: 200px}
}

@media screen and (min-width: 300px) {
  #main_logo{width: 700px}
}

</style>
