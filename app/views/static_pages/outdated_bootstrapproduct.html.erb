<% provide(:title, "Product") %>

<style media="screen">
/* Create two equal columns that floats next to each other */
.col-lg-4 {
  float:none;
  display:inline-block;
  vertical-align:middle;
  text-align: center;
  margin-right:-4px;
  padding: 30px;
}

.col-lg-8 {
  float:none;
  display:inline-block;
  vertical-align:middle;
  margin-right: -4px;
  padding: 30px;
}

.row{
  padding-right: -5px;
}

.v-center {
  position: relative;
  transform: translateY(50%);
}

/* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
@media (max-width: 800px) {
  .text-item{
    width: 100%;
  }
}
</style>



<div class="text-item">
  <h1> <%=t('product.product')%> </h1>
</div>

<div class='text-item'>
  <div class='list-item'>
    <div class="row">
      <div class="col-lg-4">
          <%=image_tag("CuTile_R1_v2_250X_01_edit.jpg", class:"v-img-responsive")%>
      </div>
      <div class="col-lg-8">
        <p>
        <b><%=t('product.graphene-title')%></b>
        </p>
        <p style="text-align:justify">
          <%=t('product.graphene-text')%>
        </p>
      <div class="center">
        <%= link_to t('product.findmore'), product_path, class: "btn btn-primary" %>
      </div></div>
      </div>
    </div>
  </div>
</div>

