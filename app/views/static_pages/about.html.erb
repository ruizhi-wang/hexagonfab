<style media="screen">
/* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
@media (max-width: 800px) {
  .text-item{
    width: 90%;
    margin: auto;
  }

}
  @media screen and (min-width: 300px) {
    #about-image{width: 500px}
  }

</style>
<!-- the provide method gives the string "help" as a variable back to the application.html.erb file; there it is defined what to do with that id -->
<% provide(:title, "About Us") %>

<div class="text-item">
  <h1>About Us</h1>
</div>

<div class="text-item">
    <div class="list-item-top">
        <p style="text-align:justify">
          <h3>
            Our Technology
          </h3>
            <%=t('about.doing') %>
          <br>
          <br>
          <div class="center">
            <%= link_to t('about.product'), product_path, class: "btn btn-secondary" %>
          </div>
        </p>
    </div>
</div>

<div class="about-text">
    <%=image_tag("CuTile_R1_v2_250X_01_edit.jpg", id:"about-image", class: "img-responsive center-block")%>
</div>

<div class="text-item">
    <div class="list-item-top">
        <p style="text-align:justify">
          <h3>
            Our Motivation
          </h3>
          <%=t('about.why') %>
          <br>
          <br>
        </p>
    </div>
</div>
