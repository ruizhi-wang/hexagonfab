<% provide(:title, "Product") %>

<style media="screen">

/* Responsive layout - makes the two columns stack on top of each other instead of next to each other */
@media (max-width: 800px) {
  .column {
      width: 100%;
  }
  .text-item{
    width: 95%;
    margin: auto;
  }

}

@media screen and (min-height: 100px) {
  #graphene-image{height: 150px}
  #hBN-image{height: 165px}
  #hetero-image{height: 170px}
  #consultancy-image{height: 170px}
}


</style>

<!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
<div class="container">
  <div class="text-item">
    <h1>Products</h1>

      <div class="list-item-top">
        <h3><small>
          <%=t('product.intro')%>
        </small></h3>
        <br>
          <div class="center">
            <%= link_to t('home.contact'), new_contact_path, class: "btn btn-primary" %>
          </div>
        <br>
      </div>

    <div class="row">

      <!-- 1st card  -->
      <div class="column left">
        <div class="card-item">
        <table>
          <tr> <td class="card-table-cell"> <h3> <%=t('product.graphene-title')%></b> </h3> </td></tr>
          <tr><td class="card-table-space"></td></tr>
          <tr>
            <td class="card-table-cell"><%=image_tag("graphene.svg", id:"graphene-image", class: 'img-responsive center-block')%></td>
          </tr>
          <tr><td class="card-table-space"></td></tr>
          <tr>
            <td class="card-table-cell">
              <p style="text-align:justify">
                <%=t('product.graphene-text')%>
              </p>
              <!-- <div class="center">
                <%= link_to t('product.findmore'), product_path, class: "btn btn-primary" %>
              </div> -->
            </td>
          </tr>
        </table>
        </div>
      </div>

      <!-- 2nd card  -->
      <div class="column right">
        <div class="card-item">
        <table>
          <tr> <td class="card-table-cell"> <h3> <%=t('product.hBN-title')%></b> </h3> </td></tr>
          <tr><td class="card-table-space"></td></tr>
          <tr>
            <td class="card-table-cell"><%=image_tag("hBN.svg", id:"hBN-image", class: 'img-responsive center-block')%></td>
          </tr>
          <tr><td class="card-table-small-space"></td></tr>
          <tr>
            <td class="card-table-cell">
              <p style="text-align:justify">
                <%=t('product.hBN-text')%>
              </p>
              <!-- <div class="center">
                <%= link_to t('product.findmore'), product_path, class: "btn btn-primary" %>
              </div> -->
            </td>
          </tr>
        </table>
        </div>
      </div>

      <!-- 3rd card  -->
      <div class="column left">
        <div class="card-item">
        <table>
          <tr> <td class="card-table-cell"> <h3> <%=t('product.hetero-title')%></b> </h3> </td></tr>
          <tr><td class="card-table-space"></td></tr>
          <tr>
            <td class="card-table-cell"><%=image_tag("hetero.svg",id:'hetero-image', class: 'img-responsive center-block')%></td>
          </tr>
          <tr><td class="card-table-space"></td></tr>
          <tr>
            <td class="card-table-cell">
              <p style="text-align:justify">
                <%=t('product.hetero-text')%>
              </p>
              <!-- <div class="center">
                <%= link_to t('product.findmore'), product_path, class: "btn btn-primary" %>
              </div> -->
            </td>
          </tr>
        </table>
        </div>
      </div>

      <!-- 4th card  -->
      <div class="column right">
        <div class="card-item">
        <table>
          <tr> <td class="card-table-cell"> <h3> <%=t('product.consultancy-title')%></b> </h3> </td></tr>
          <tr><td class="card-table-space"></td></tr>
          <tr>
            <td class="card-table-cell"><%=image_tag("logo_alone.svg", id:'consultancy-image', class: 'img-responsive center-block')%></td>
          </tr>
          <tr><td class="card-table-space"></td></tr>
          <tr>
            <td class="card-table-cell">
              <p style="text-align:justify">
                <%=t('product.consultancy-text')%>
              </p>
              <!-- <div class="center">
                <%= link_to t('product.findmore'), product_path, class: "btn btn-primary" %>
              </div> -->
            </td>
          </tr>
        </table>
        </div>
      </div>

    </div>

  </div>

</div>
